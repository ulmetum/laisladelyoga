---
import Container from '@/components/Container.astro'
import MainHeading from '@/components/homePage/MainHeading.astro'
import AnimationIsla from '@/components/homePage/AnimationIsla.astro'
import Marquee from '@/components/homePage/Marquee.astro'
import CarouselYoga from '@/components/CarouselYoga.astro'
import CircularText from '@/components/CircularText.astro'
---

<Container
	className="flex h-screen items-center justify-center px-2 py-[calc(var(--header-height)/2)] sm:px-6"
>
	<div
		class="relative flex h-full w-full flex-col items-center justify-center gap-6 pt-[calc(var(--header-height))] xl:pt-0"
	>
		<MainHeading />
		<div class="relative mx-auto flex max-w-[900px] flex-col gap-4 md:flex-row-reverse xl:gap-0">
			<AnimationIsla
				color="amber"
				fill="transparent"
				className="justify-center md:w-[35%] md:justify-start md:pr-4"
			/>
			<div class="flex items-center md:w-[65%]">
				<p
					class="mx-auto w-[min(100%,480px)] text-center text-[.95rem] leading-snug md:text-right md:text-sm lg:text-base"
				>
					Lorem ipsum dolor sit amet consectetur adipisicing elit. Sit tenetur consequuntur enim aut
					perspiciatis quo delectus nulla doloremque ad fuga! Laudantium modi atque laboriosam unde
					delectus at commodi?
				</p>
			</div>
		</div>
		<CarouselYoga />
		<div class="mt-auto w-full max-xl:hidden">
			<Marquee />
		</div>
		<div
			class="absolute right-32 top-[20%] z-10 hidden h-[300px] w-[300px] -translate-y-1/2 lg:block xl:left-16 xl:top-[55%]"
		>
			<CircularText />
		</div>
	</div>
</Container>
