---
import DropYoga from '../icons/Drop-yoga.icon.astro'
import HandYoga from '../icons/Hand-yoga.icon.astro'
import LotusYoga from '../icons/Lotus-yoga.icon.astro'
import PoseWomanOne from '../icons/Pose-woman-one.icon.astro'
import StoneYoga from '../icons/Stone-yoga.icon.astro'
---

<div class="grid-home mx-auto max-w-4xl lg:w-[60%]">
	<div
		class="relative flex items-end justify-start overflow-hidden rounded-[36px] border border-zinc-900 p-2 [grid-area:text] lg:p-0"
	>
		<div class="absolute -right-8 top-4 hidden md:block lg:w-2/3">
			<PoseWomanOne />
		</div>

		<h3 class="relative p-2 sm:w-2/3 sm:p-4 md:p-8 md:text-4xl">
			Conecta profundamente con tu esencia
		</h3>
	</div>
	<div
		class="flex flex-col items-center justify-center rounded-[36px] border border-zinc-900 p-4 [grid-area:top] lg:p-6"
	>
		<DropYoga />
		<small class="mt-2 hidden font-heading text-2xl font-light text-zinc-900 md:block"
			>Cursos y Talleres</small
		>
	</div>
	<div
		class="flex flex-col items-center justify-center rounded-[36px] border border-zinc-900 p-2 [grid-area:right] lg:p-6"
	>
		<StoneYoga />
		<small class="mt-2 hidden font-heading text-2xl font-light text-zinc-900 md:block"
			>Art√≠culos y Libros</small
		>
	</div>
	<div
		class="flex flex-col items-center justify-center rounded-[36px] border border-zinc-900 p-2 [grid-area:left] lg:p-6"
	>
		<LotusYoga />
		<small class="mt-2 hidden font-heading text-2xl font-light text-zinc-900 md:block"
			>Sesiones Online</small
		>
	</div>
	<div
		class="flex flex-col items-center justify-center rounded-[36px] border border-zinc-900 p-2 [grid-area:bottom] lg:p-6"
	>
		<HandYoga />
		<small class="mt-2 hidden font-heading text-2xl font-light text-zinc-900 md:block"
			>Clases Personalizadas</small
		>
	</div>
</div>

<style>
	.grid-home {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-template-rows: repeat(3, 175px);
		grid-template-areas:
			'text text top'
			'text text right'
			'left bottom bottom';
		gap: 1rem;
	}
</style>
