---
import Container from '@/components/Container.astro'
import PaginationArticle from '@/components/blog/PaginationArticle.astro'
import type { ArticleElement, Datum } from '@/interfaces'
import ElementsManager from './ElementsManager.astro'

interface Props {
	prevArticle: Datum
	nextArticle: Datum
	elements: ArticleElement[]
}

const { prevArticle, nextArticle, elements } = Astro.props
---

<Container className="relative flex min-h-screen flex-col justify-between">
	<ElementsManager elements={elements} />
	<PaginationArticle prevArticle={prevArticle} nextArticle={nextArticle} />
</Container>
