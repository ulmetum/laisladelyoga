---
import type { Datum } from '@/interfaces'
import type { Page } from 'astro'

interface Props {
	page: Page<Datum>
}

const { page } = Astro.props
const { prev, next } = page.url
---

<nav class="pagination my-16 flex justify-between font-heading text-2xl text-amber-700">
	<a
		href={prev}
		class:list={[
			'',
			{
				'opacity-35': !prev
			}
		]}
	>
		Anteriores
	</a>
	<a href={next} class="next"> Siguientes </a>
</nav>
