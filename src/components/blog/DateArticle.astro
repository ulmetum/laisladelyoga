---
import dayjs from 'dayjs'

interface Props {
	createdAt: Date
	color?: 'alternative' | 'dark'
}

const { createdAt, color = 'dark' } = Astro.props

const colors = {
	alternative: 'text-primary',
	dark: 'text-text'
}
---

<small
	class:list={['block w-[45%] font-heading font-normal capitalize leading-none', colors[color]]}
	>{dayjs(createdAt).format('MMMM D, YYYY')}</small
>
