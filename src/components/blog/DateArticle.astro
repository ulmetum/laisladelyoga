---
import dayjs from 'dayjs'

interface Props {
	createdAt: Date
	color?: 'alternative' | 'dark'
}

const { createdAt, color = 'dark' } = Astro.props

const colors = {
	alternative: 'text-amber-700',
	dark: 'text-zinc-900'
}
---

<small class:list={['block w-[45%] font-heading capitalize leading-none', colors[color]]}
	>{dayjs(createdAt).format('MMMM D, YYYY')}</small
>
