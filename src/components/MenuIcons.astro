---
import TikTok from '@/components/icons/TikTok.icon.astro'
import Youtube from '@/components/icons/Youtube.icon.astro'
import Instagram from '@/components/icons/Instagram.icon.astro'
import Spotify from '@/components/icons/Spotify.icon.astro'

interface Props {
	className?: string
	color?: 'alternative' | 'dark'
	size?: 'small' | 'medium' | 'large'
}

const { size = 'small', className, color = 'dark' } = Astro.props
---

<nav class:list={['flex', className]}>
	<a title="Tiktok" href="#" target="_blank">
		<TikTok color={color} size={size} />
	</a>
	<a title="Youtube" href="#" target="_blank">
		<Youtube color={color} size={size} />
	</a>
	<a title="Instagram" href="#" target="_blank">
		<Instagram color={color} size={size} />
	</a>
	<a title="Spotify" href="#" target="_blank">
		<Spotify color={color} size={size} />
	</a>
</nav>
