<style>
	.grid-home {
		display: grid;
		grid-template-columns: repeat(3, max-content);
		grid-template-rows: repeat(3, 150px);
		grid-template-areas:
			'text text top'
			'text text right'
			'left bottom bottom';
		gap: 1rem;
	}
	.grid-isla {
		display: grid;
		grid-template-columns: repeat(4, 125px);
		grid-template-rows: repeat(3, 175px);
		grid-template-areas:
			'i s l a'
			'i o l e'
			'y o g e';
	}

	@keyframes bounceUp {
		0% {
			transform: translateY(0);
		}
		100% {
			transform: translateY(-150px); /* Sube 120px */
		}
	}

	@keyframes bounceDown {
		0% {
			transform: translateY(0);
		}
		100% {
			transform: translateY(150px); /* Baja 120px */
		}
	}

	/* Animaciones para las letras */
	.animate-up-1 {
		animation: bounceUp 4s var(--ease) infinite alternate;
	}
	.animate-up-2 {
		animation: bounceUp 2.4s 0.6s var(--ease) infinite alternate;
	}

	.animate-down-1 {
		animation: bounceDown 2.75s 0.25s var(--ease) infinite alternate;
	}
	.animate-down-2 {
		animation: bounceDown 2s 1s var(--ease) infinite alternate;
	}

